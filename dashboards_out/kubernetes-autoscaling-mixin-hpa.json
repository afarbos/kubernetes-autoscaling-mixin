{
   "__inputs": [ ],
   "__requires": [ ],
   "description": "A dashboard that monitors Horizontal Pod Autoscalers. The dashboards were generated using [kubernetes-autoscaling-mixin](https://github.com/adinhodovic/kubernetes-autoscaling-mixin). Open issues and create feature requests in the repository.",
   "editable": true,
   "links": [
      {
         "asDropdown": true,
         "includeVars": false,
         "keepTime": true,
         "tags": [
            "kubernetes",
            "autoscaling",
            "kubernetes-autoscaling-mixin"
         ],
         "targetBlank": true,
         "title": "Kubernetes / Autoscaling",
         "type": "dashboards"
      }
   ],
   "panels": [
      {
         "collapsed": false,
         "gridPos": {
            "h": 1,
            "w": 24,
            "x": 0,
            "y": 0
         },
         "id": 1,
         "title": "Summary",
         "type": "row"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The desired number of replicas for the HPA.",
         "fieldConfig": {
            "defaults": {
               "mappings": [ ],
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": 0
                     }
                  ]
               },
               "unit": "short"
            }
         },
         "gridPos": {
            "h": 4,
            "w": 6,
            "x": 0,
            "y": 1
         },
         "id": 2,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "expr": "round(\n  sum(\n    kube_horizontalpodautoscaler_status_desired_replicas{\n      cluster=\"$cluster\",\n      namespace=~\"$namespace\",\n      horizontalpodautoscaler=\"$hpa\"\n    }\n  )\n)\n"
            }
         ],
         "title": "Desired Replicas",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The current number of replicas for the HPA.",
         "fieldConfig": {
            "defaults": {
               "mappings": [ ],
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": 0
                     }
                  ]
               },
               "unit": "short"
            }
         },
         "gridPos": {
            "h": 4,
            "w": 6,
            "x": 6,
            "y": 1
         },
         "id": 3,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "expr": "round(\n  sum(\n    kube_horizontalpodautoscaler_status_current_replicas{\n      cluster=\"$cluster\",\n      namespace=~\"$namespace\",\n      horizontalpodautoscaler=\"$hpa\"\n    }\n  )\n)\n"
            }
         ],
         "title": "Current Replicas",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The minimum number of replicas configured for the HPA.",
         "fieldConfig": {
            "defaults": {
               "mappings": [ ],
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": 0
                     }
                  ]
               },
               "unit": "short"
            }
         },
         "gridPos": {
            "h": 4,
            "w": 6,
            "x": 12,
            "y": 1
         },
         "id": 4,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "expr": "round(\n  sum(\n    kube_horizontalpodautoscaler_spec_min_replicas{\n      cluster=\"$cluster\",\n      namespace=~\"$namespace\",\n      horizontalpodautoscaler=\"$hpa\"\n    }\n  )\n)\n"
            }
         ],
         "title": "Min Replicas",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The maximum number of replicas configured for the HPA.",
         "fieldConfig": {
            "defaults": {
               "mappings": [ ],
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": 0
                     }
                  ]
               },
               "unit": "short"
            }
         },
         "gridPos": {
            "h": 4,
            "w": 6,
            "x": 18,
            "y": 1
         },
         "id": 5,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "expr": "round(\n  sum(\n    kube_horizontalpodautoscaler_spec_max_replicas{\n      cluster=\"$cluster\",\n      namespace=~\"$namespace\",\n      horizontalpodautoscaler=\"$hpa\"\n    }\n  )\n)\n"
            }
         ],
         "title": "Max Replicas",
         "type": "stat"
      },
      {
         "collapsed": false,
         "gridPos": {
            "h": 1,
            "w": 24,
            "x": 0,
            "y": 5
         },
         "id": 6,
         "title": "Metrics",
         "type": "row"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The configured threshold for the HPA metric.",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 10
               },
               "unit": "short"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 0,
            "y": 6
         },
         "id": 7,
         "options": {
            "legend": {
               "calcs": [
                  "lastNotNull",
                  "mean",
                  "max"
               ],
               "displayMode": "table",
               "placement": "right",
               "showLegend": true,
               "sortBy": "LastNotNull",
               "sortDesc": true
            },
            "tooltip": {
               "mode": "multi",
               "sort": "desc"
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "exemplar": false,
               "expr": "sum(\n  kube_horizontalpodautoscaler_spec_target_metric{\n    cluster=\"$cluster\",\n    namespace=~\"$namespace\",\n    horizontalpodautoscaler=\"$hpa\",\n    metric_name=~\"$metric_name\",\n    metric_target_type=~\"$metric_target_type\"\n  }\n) by (job, namespace, horizontalpodautoscaler, metric_name, metric_target_type)\n",
               "legendFormat": "{{ metric_name }} / {{ metric_target_type }}"
            }
         ],
         "title": "Usage Threshold",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The current utilization of the HPA metric.",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 10
               },
               "unit": "short"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 12,
            "y": 6
         },
         "id": 8,
         "options": {
            "legend": {
               "calcs": [
                  "lastNotNull",
                  "mean",
                  "max"
               ],
               "displayMode": "table",
               "placement": "right",
               "showLegend": true,
               "sortBy": "LastNotNull",
               "sortDesc": true
            },
            "tooltip": {
               "mode": "multi",
               "sort": "desc"
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "exemplar": false,
               "expr": "sum(\n  kube_horizontalpodautoscaler_status_target_metric{\n    cluster=\"$cluster\",\n    namespace=~\"$namespace\",\n    horizontalpodautoscaler=\"$hpa\",\n    metric_name=~\"$metric_name\",\n    metric_target_type=~\"$metric_target_type\"\n  }\n) by (job, namespace, horizontalpodautoscaler, metric_name, metric_target_type)\n",
               "legendFormat": "{{ metric_name }} / {{ metric_target_type }}"
            }
         ],
         "title": "Utilization",
         "type": "timeseries"
      },
      {
         "collapsed": false,
         "gridPos": {
            "h": 1,
            "w": 24,
            "x": 0,
            "y": 14
         },
         "id": 9,
         "title": "Metric Targets",
         "type": "row"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Configured metric targets for the HPA.",
         "fieldConfig": {
            "defaults": {
               "thresholds": {
                  "steps": [ ]
               },
               "unit": "short"
            },
            "overrides": [ ]
         },
         "gridPos": {
            "h": 8,
            "w": 24,
            "x": 0,
            "y": 15
         },
         "id": 10,
         "options": {
            "footer": {
               "enablePagination": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "sum(\n  kube_horizontalpodautoscaler_spec_target_metric{\n    cluster=\"$cluster\",\n    namespace=~\"$namespace\",\n    horizontalpodautoscaler=\"$hpa\",\n    metric_name=~\"$metric_name\"\n  }\n) by (job, namespace, horizontalpodautoscaler, metric_name, metric_target_type)\n",
               "format": "table",
               "instant": true
            }
         ],
         "title": "Metric Targets",
         "transformations": [ ],
         "type": "table"
      }
   ],
   "schemaVersion": 39,
   "tags": [
      "kubernetes",
      "autoscaling",
      "kubernetes-autoscaling-mixin",
      "hpa"
   ],
   "templating": {
      "list": [
         {
            "current": {
               "selected": true,
               "text": "default",
               "value": "default"
            },
            "label": "Data source",
            "name": "datasource",
            "query": "prometheus",
            "type": "datasource"
         },
         {
            "datasource": {
               "type": "prometheus",
               "uid": "${datasource}"
            },
            "hide": 2,
            "label": "Cluster",
            "name": "cluster",
            "query": "label_values(kube_pod_info{job=~\"kube-state-metrics\"}, cluster)",
            "refresh": 2,
            "sort": 1,
            "type": "query"
         },
         {
            "datasource": {
               "type": "prometheus",
               "uid": "${datasource}"
            },
            "label": "Namespace",
            "multi": true,
            "name": "namespace",
            "query": "label_values(kube_poddisruptionbudget_status_current_healthy{cluster=\"$cluster\", job=~\"$job\"}, namespace)",
            "refresh": 2,
            "sort": 1,
            "type": "query"
         },
         {
            "datasource": {
               "type": "prometheus",
               "uid": "${datasource}"
            },
            "includeAll": false,
            "label": "HPA",
            "multi": false,
            "name": "hpa",
            "query": "label_values(kube_horizontalpodautoscaler_spec_target_metric{cluster=\"$cluster\", namespace=\"$namespace\"}, horizontalpodautoscaler)",
            "refresh": 2,
            "sort": 1,
            "type": "query"
         },
         {
            "datasource": {
               "type": "prometheus",
               "uid": "${datasource}"
            },
            "includeAll": true,
            "label": "Metric Name",
            "multi": true,
            "name": "metric_name",
            "query": "label_values(kube_horizontalpodautoscaler_spec_target_metric{cluster=\"$cluster\", namespace=\"$namespace\", horizontalpodautoscaler=\"$hpa\"}, metric_name)",
            "refresh": 2,
            "sort": 1,
            "type": "query"
         },
         {
            "datasource": {
               "type": "prometheus",
               "uid": "${datasource}"
            },
            "includeAll": true,
            "label": "Metric Target Type",
            "multi": true,
            "name": "metric_target_type",
            "query": "label_values(kube_horizontalpodautoscaler_spec_target_metric{cluster=\"$cluster\", namespace=\"$namespace\", horizontalpodautoscaler=\"$hpa\", metric_name=~\"$metric_name\"}, metric_target_type)",
            "refresh": 2,
            "sort": 1,
            "type": "query"
         }
      ]
   },
   "time": {
      "from": "now-6h",
      "to": "now"
   },
   "timezone": "utc",
   "title": "Kubernetes / Autoscaling / HPA",
   "uid": "kubernetes-autoscaling-mixin-hpa-jkwq"
}
